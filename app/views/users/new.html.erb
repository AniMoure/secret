<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control state-danger-text' %><br><br>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control state-danger-text' %><br><br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control state-danger-text' %><br><br>

      <%= f.label :password_confirmation, "Confirm your password" %>
      <%= f.password_field :password_confirmation, class: 'form-control state-danger-text' %><br><br>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
    <p>Already got an account? <%= link_to "Log in!", login_path %></p>
  </div>
</div>
